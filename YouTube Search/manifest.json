{
    "manifest_version": 3,
    "name": "YouTube Search",
    "version": "1.0",
    "description": "Unlock the Power to Search YouTube with Just a Click! Open Your Highlighted Text in New Tabs.",
    "permissions": [
        "activeTab",
        "tabs",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "./context.js"
            ]
        }
    ],
    "permissions": [
        "contextMenus"
    ],
    "icons": {
        "16": "./assets/favicon.ico",
        "32": "./assets/favicon32.png",
        "48": "./assets/favicon48.png",
        "96": "./assets/favicon96.png",
        "144": "./assets/favicon144.png"
    }
}