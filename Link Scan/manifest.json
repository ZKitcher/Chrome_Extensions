{
    "manifest_version": 3,
    "name": "Link Scan",
    "version": "1.0",
    "description": "Easily Navigate to Relevant Links: This Extension Scans the Page, Matches Your Selected Text, and Automatically Scrolls to the Best-Matching Link.",
    "permissions": [
        "activeTab",
        "tabs",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "./context.js"
            ],
            "css": [
                "LinkScan.css"
            ]
        }
    ],
    "permissions": [
        "contextMenus"
    ],
    "icons": {
        "16": "./assets/favicon.ico",
        "32": "./assets/favicon32.png",
        "48": "./assets/favicon48.png",
        "96": "./assets/favicon96.png",
        "144": "./assets/favicon144.png"
    }
}